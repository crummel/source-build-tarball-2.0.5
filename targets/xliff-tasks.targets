<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="Build">
    <Message Importance="High" Text="Building '$(RepositoryName)'" />

    <Exec Command="$(DotNetCommand) restore $(ProjectDirectory)src\XliffTasks\XliffTasks.csproj" />

    <Exec Command="$(DotNetCommand) build $(ProjectDirectory)build\build.proj /t:Pack /v:normal /flp:Verbosity=Diag;LogFile=$(ProjectDirectory)msbuild.log"
          EnvironmentVariables="@(EnvironmentVariables)" />
  </Target>
</Project>
